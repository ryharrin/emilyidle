{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true,
    "strict": true,
    "types": ["vite/client"],
    "jsxImportSource": "react",
    "jsx": "react-jsx"
  },
  "include": ["src", "tests"]
}
